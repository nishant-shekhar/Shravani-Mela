<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcfcfc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:visibility="visible">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <android.support.v4.view.ViewPager
                    android:id="@+id/slideshow_pager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                </android.support.v4.view.ViewPager>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:title="@string/app_name" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|end"
                    app:layout_collapseMode="pin"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/music_button"
                        android:contentDescription="@string/app_name"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_dot"
                        android:onClick="play_pauseMusic"
                        app:srcCompat="@drawable/ic_volume_up_black_24dp" />
                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:orientation="vertical">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/crowd_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                </android.support.v7.widget.RecyclerView>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_live_video"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="GoToCamera"
                        app:cardBackgroundColor="@color/gerua_trans"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintEnd_toStartOf="@+id/card_notification"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/card_notification">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/live_arti"
                                android:textAlignment="center"
                                android:textColor="@color/background"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/background" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/circle_bg"
                                android:contentDescription="@string/app_name"
                                android:padding="10dp"
                                app:srcCompat="@drawable/ic_videocam_24dp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_notification"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="GoToNotification"
                        app:cardBackgroundColor="@color/gerua_trans"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/card_live_video"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/alert"
                                android:textAlignment="center"
                                android:textColor="@color/background"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/background" />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/circle_bg"
                                android:contentDescription="@string/app_name"
                                android:padding="10dp"
                                app:srcCompat="@drawable/ic_notifications_24dp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_ambulance"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="GoToAmbulance"
                        app:cardBackgroundColor="@color/gerua_trans"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintEnd_toStartOf="@+id/card_sos"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/card_sos">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:alpha="0.2"
                            android:contentDescription="@string/ambulance"
                            app:srcCompat="@drawable/frame" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_bg_so"
                                android:contentDescription="@string/app_name"
                                android:padding="10dp"
                                app:srcCompat="@drawable/ambulance" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/ambulance"
                                android:textColor="@color/background"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_sos"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="GoToSOS"
                        app:cardBackgroundColor="@android:color/holo_orange_dark"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintEnd_toStartOf="@+id/card_crowd_status"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/card_ambulance"
                        app:layout_constraintTop_toTopOf="@+id/card_crowd_status">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:alpha="0.2"
                            android:contentDescription="@string/ambulance"
                            app:srcCompat="@drawable/frame" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_bg_so"
                                android:contentDescription="@string/app_name"
                                android:padding="7dp"
                                app:srcCompat="@drawable/sos" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/sos"
                                android:textColor="@color/background"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_crowd_status"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="loadCrowdStatus"
                        app:cardBackgroundColor="@color/gerua_trans"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/card_sos"
                        app:layout_constraintTop_toBottomOf="@+id/card_live_video">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:alpha="0.2"
                            android:contentDescription="@string/ambulance"
                            app:srcCompat="@drawable/frame" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_bg"
                                android:contentDescription="@string/app_name"
                                android:padding="10dp"
                                app:srcCompat="@drawable/crowd_4" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/crowd_status"
                                android:textColor="@color/background"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_medical_store"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="GoToCtrlRoom"
                        app:cardBackgroundColor="@color/gerua_trans"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintEnd_toStartOf="@+id/card_toilet"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/card_toilet">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:alpha="0.2"
                            android:contentDescription="@string/ambulance"
                            app:srcCompat="@drawable/frame" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_bg"
                                android:contentDescription="@string/app_name"
                                android:paddingBottom="10dp"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                app:srcCompat="@drawable/call_center" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/control_room"
                                android:textColor="@color/background"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_toilet"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="GoToToilet"
                        app:cardBackgroundColor="@color/gerua_trans"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintEnd_toStartOf="@+id/drinking_water"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/card_medical_store"
                        app:layout_constraintTop_toTopOf="@+id/drinking_water">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:alpha="0.2"
                            android:contentDescription="@string/ambulance"
                            app:srcCompat="@drawable/frame" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_bg"
                                android:contentDescription="@string/app_name"
                                android:padding="10dp"
                                app:srcCompat="@drawable/toilet" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/toilet"
                                android:textColor="@color/background"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/drinking_water"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="GoToDrinkingWater"
                        app:cardBackgroundColor="@color/gerua_trans"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/card_toilet"
                        app:layout_constraintTop_toBottomOf="@+id/card_crowd_status">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:alpha="0.2"
                            android:contentDescription="@string/ambulance"
                            app:srcCompat="@drawable/frame" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_bg"
                                android:contentDescription="@string/app_name"
                                android:padding="10dp"
                                app:srcCompat="@drawable/drinking_water" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/drinking_water"
                                android:textColor="@color/background"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_police"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="GoToPolice"
                        app:cardBackgroundColor="@color/gerua_trans"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintEnd_toStartOf="@+id/card_bathroom"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/card_bathroom">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:alpha="0.2"
                            android:contentDescription="@string/ambulance"
                            app:srcCompat="@drawable/frame" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_bg"
                                android:contentDescription="@string/app_name"
                                android:paddingBottom="10dp"
                                android:paddingEnd="12dp"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                app:srcCompat="@drawable/police" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/police_station"
                                android:textColor="@color/background"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_bathroom"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="GoToBathroom"
                        app:cardBackgroundColor="@color/gerua_trans"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintEnd_toStartOf="@+id/card_waterfall"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/card_police"
                        app:layout_constraintTop_toTopOf="@+id/card_waterfall">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:alpha="0.2"
                            android:contentDescription="@string/ambulance"
                            app:srcCompat="@drawable/frame" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_bg"
                                android:contentDescription="@string/app_name"
                                android:padding="10dp"
                                app:srcCompat="@drawable/shower" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/bathroom"
                                android:textColor="@color/background"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_waterfall"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:onClick="GoToWaterfall"
                        app:cardBackgroundColor="@color/gerua_trans"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/card_bathroom"
                        app:layout_constraintTop_toBottomOf="@+id/drinking_water">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:alpha="0.2"
                            android:contentDescription="@string/ambulance"
                            app:srcCompat="@drawable/frame" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_bg"
                                android:contentDescription="@string/app_name"
                                android:padding="10dp"
                                app:srcCompat="@drawable/waterfall" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
